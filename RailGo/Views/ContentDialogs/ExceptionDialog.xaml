<ContentDialog
    x:Class="RailGo.Views.ContentDialogs.ExceptionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="应用程序出错"
    PrimaryButtonText="确定"
    SecondaryButtonText="复制错误信息"
    CloseButtonText="重启应用"
    DefaultButton="Primary"
    Width="600"
    Height="500">

    <ScrollViewer 
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Vertical" Margin="0,0,10,0">
            <TextBlock 
                x:Name="ExceptionTypeText"
                FontWeight="SemiBold"
                IsTextSelectionEnabled="True"
                FontSize="14"
                Margin="0,0,0,10"/>
            <TextBlock 
                Text="错误信息："
                FontWeight="SemiBold"
                Margin="0,0,0,5"/>
            <ScrollViewer 
                    VerticalScrollBarVisibility="Disabled"
                    HorizontalScrollBarVisibility="Auto">
                <TextBox 
                    x:Name="ErrorMessageTextBox"
                    IsReadOnly="True"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    BorderThickness="1"
                    FontFamily="Consolas, Courier New"
                    Margin="0,0,0,10"/>
            </ScrollViewer>
            <TextBlock 
                Text="堆栈跟踪："
                FontWeight="SemiBold"
                Margin="0,0,0,5"/>
            <ScrollViewer 
                    VerticalScrollBarVisibility="Disabled"
                    HorizontalScrollBarVisibility="Auto">
                <TextBox 
                    x:Name="StackTraceTextBox"
                    IsReadOnly="True"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    BorderThickness="1"
                    FontFamily="Consolas, Courier New"
                    FontSize="12"
                    Margin="0,0,0,10"/>
            </ScrollViewer>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>