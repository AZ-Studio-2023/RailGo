<ContentDialog
    x:Class="RailGo.Views.ContentDialogs.SourceSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:RailGo.Core.Models.Settings"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    Title="选择数据源"
    PrimaryButtonText="确认"
    CloseButtonText="取消"
    PrimaryButtonClick="OnPrimaryButtonClick"
    DefaultButton="Primary"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 模式选择 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,15">
            <RadioButton Content="在线API源" 
                        IsChecked="{x:Bind IsOnlineMode, Mode=TwoWay}"
                        GroupName="SourceMode"/>
            <RadioButton Content="离线数据库源" 
                        IsChecked="{x:Bind IsOfflineMode, Mode=TwoWay}"
                        GroupName="SourceMode"/>
        </StackPanel>

        <!-- 数据源列表 -->
        <controls:DataGrid
            Grid.Row="1"
            x:Name="SourcesDataGrid"
            AutoGenerateColumns="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            VerticalScrollBarVisibility="Auto"
            IsReadOnly="True"
            ItemsSource="{x:Bind CurrentSources, Mode=OneWay}"
            SelectionMode="Single"
            SelectedItem="{x:Bind SelectedSource, Mode=TwoWay}">

            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn 
                    Binding="{Binding Name, Mode=OneWay}" 
                    Header="名称" 
                    Width="*"/>
                <controls:DataGridTextColumn 
                    Binding="{Binding Address, Mode=OneWay}" 
                    Header="地址" 
                    Width="*"/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </Grid>
</ContentDialog>