<Page
    x:Class="RailGo.Views.TrainNumberTripDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <StackPanel x:Name="ContentArea" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid HorizontalAlignment="Left" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Stretch" Grid.Row="0">

                <TextBlock Text="{x:Bind realdata.TrainNumber, Mode=OneWay}" FontSize="36" Margin="20,20"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="高速"
                        Background="#f8ebfd"
                        BorderBrush="#d57df0"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="10,5"
                        IsHitTestVisible="False"
                        Margin="20,10,0,10"
                        Visibility="{x:Bind ifHighSpeed, Mode=OneWay}"/>
                    <Button Content="复兴号CR400"
                        Background="#fdefeb"
                        BorderBrush="#f09b7d"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="10,5"
                        IsHitTestVisible="False"
                        Margin="20,10,0,10"
                        Visibility="Collapsed"/>
                    <Button Content="智能动车"
                        Background="#feebe9"
                        BorderBrush="#fa8072"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="10,5"
                        IsHitTestVisible="False"
                        Margin="20,10,0,10"
                        Visibility="Collapsed"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,10,5,10">
                    <TextBlock Text="{x:Bind realDetailsData.CompanyName, Mode=OneWay}" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,10,5,10">
                    <TextBlock Text="餐车：" FontSize="16"/>
                    <TextBlock Text="{x:Bind realDetailsData.FoodCoachName, Mode=OneWay}" FontSize="16"/>
                </StackPanel>
                <Grid   Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        CornerRadius="8"
                        Padding="12"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{x:Bind realdata.DepartureTime, Mode=OneWay}" FontSize="24" Margin="20,0,0,0" Grid.Row="0" Grid.Column="0"/>
                    <TextBlock Text="{x:Bind realdata.BeginStationName, Mode=OneWay}" FontSize="12" Margin="20,5"  Grid.Row="1" Grid.Column="0"/>
                    <TextBlock Text="→" FontSize="24" Margin="20,0,0,0"  Grid.Row="0" Grid.Column="1">
                        <TextBlock.RenderTransform>
                            <ScaleTransform ScaleX="3" ScaleY="1" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Text="{x:Bind AlongTime, Mode=OneWay}" FontSize="12" Margin="20,5"  Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Text="{x:Bind realdata.ArrivalTime, Mode=OneWay}" FontSize="24" Margin="20,0,0,0"  Grid.Row="0" Grid.Column="2"/>
                    <TextBlock Text="{x:Bind realdata.EndStationName, Mode=OneWay}" FontSize="12" Margin="20,5"  Grid.Row="1" Grid.Column="2"/>
                </Grid>

            </StackPanel>

            <ListView Name="MyListView" 
                Header="信息查看"
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Bottom" 
                SelectionMode="Single"
                Margin="20,10,10,10"
                Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <StackPanel>
                            <TextBlock Text="{Binding}" FontSize="12" Padding="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Items>
                    <ListViewItem Content="车组交路"/>
                    <ListViewItem Content="途径站点"/>
                    <ListViewItem Content="历史正晚点"/>
                </ListView.Items>
            </ListView>

        </Grid>
        <Grid HorizontalAlignment="Center" Margin="40,40" Grid.Column="2">
            <controls:DataGrid 
                AutoGenerateColumns="False"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto"
                IsReadOnly="True"
                ItemsSource="{x:Bind viaStations, Mode=OneWay}">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Binding="{Binding CheckoutName}" x:Uid="date_Header" />
                    <controls:DataGridTextColumn Binding="{Binding StationName}" x:Uid="emu_no_Header" />
                    <controls:DataGridTextColumn Binding="{Binding DepartureTime}" x:Uid="train_no_Header" />
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>
    </StackPanel>
</Page>
