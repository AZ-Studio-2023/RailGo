<Page
    x:Class="RailGo.Views.Pages.StationToStation.StationToStationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea">
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Spacing="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"><Bold>始发站：</Bold></TextBlock>
                    <HyperlinkButton x:Name="OpenStationSelector_FromStation" Content="打开车站选择" Click="OpenStationSelector_FromStation_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"><Bold>已选择：</Bold></TextBlock>
                    <TextBox IsReadOnly="True" PlaceholderText="请选择一个车站" Text="{x:Bind ViewModel.FromStation.Name, Mode=OneWay}"/>
                </StackPanel>
                <Button Margin="0,10,0,0" HorizontalAlignment="Center" Click="SwitchFromAndToButton_Click">
                    <FontIcon Glyph="&#xE8AB;" RenderTransformOrigin="0.5,0.5" Margin="3">
                        <FontIcon.RenderTransform>
                            <RotateTransform Angle="90"/>
                        </FontIcon.RenderTransform>
                    </FontIcon>
                </Button>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock VerticalAlignment="Center"><Bold>终到站：</Bold></TextBlock>
                    <HyperlinkButton x:Name="OpenStationSelector_ToStation" Content="打开车站选择" Click="OpenStationSelector_ToStation_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center"><Bold>已选择：</Bold></TextBlock>
                    <TextBox IsReadOnly="True" PlaceholderText="请选择一个车站" Text="{x:Bind ViewModel.ToStation.Name, Mode=OneWay}"/>
                </StackPanel>
                <CalendarDatePicker Margin="0,10,0,0" PlaceholderText="选择日期" HorizontalAlignment="Center"/>
                <Button Margin="0,10,0,0" HorizontalAlignment="Stretch" Content="查询" Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
            <StackPanel Margin="60,0,0,10" Spacing="10" VerticalAlignment="Stretch">
                <TextBlock FontSize="20" Text="{x:Bind ViewModel.ContentText, Mode=OneWay}"/>
                <Frame VerticalAlignment="Stretch" x:Name="PageFrame"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
