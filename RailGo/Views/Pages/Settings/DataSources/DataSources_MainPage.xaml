<Page
    x:Class="RailGo.Views.Pages.Settings.DataSources.DataSources_MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:RailGo.Helpers"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:local="using:RailGo.Helpers"
    mc:Ignorable="d">
    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContentArea">
                <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                    <TextBlock Text="基本" Style="{ThemeResource SubtitleTextBlockStyle}" 
                                   Margin="{StaticResource XSmallTopMargin}"/>
                    <controls:SettingsCard 
                                   Description="可以使用离线或在线模式，或者使用一个自定义组合（若启用且存在）"
                                   Header="查询源"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE8A1;}"
                                   Margin="{StaticResource XSmallTopMargin}">
                        <ComboBox
                                x:Name="QueryModeComboBox"
                                Margin="{StaticResource XSmallTopMargin}"
                                FontSize="15"
                                SelectedValuePath="Tag"
                                SelectedValue="{x:Bind ViewModel.QueryMode, Mode=TwoWay}">
                            <ComboBoxItem Content="在线（RailGo默认）" Tag="Online"/>
                            <ComboBoxItem Content="离线（RailGo默认）" Tag="Offline" IsEnabled="{x:Bind ViewModel.IfOfflineAvailable, Mode=OneWay}"/>
                            <ComboBoxItem Content="自定义数据源" Tag="Custom" IsEnabled="{x:Bind ViewModel.AllowCustomSource, Mode=OneWay}"/>
                        </ComboBox>
                    </controls:SettingsCard>
                    <InfoBar
                                IsOpen="True"
                                IsClosable="False"
                                Margin="{StaticResource XSmallTopMargin}"
                                Severity="Informational"
                                Title="当前数据源"
                                Message="{x:Bind ViewModel.QuerySource, Mode=OneWay}" />
                    <TextBlock Text="离线在线查询模式互补" Style="{ThemeResource SubtitleTextBlockStyle}" 
                                   Margin="{StaticResource MediumTopMargin}"/>
                    <InfoBar
                        IsOpen="True"
                        Severity="Warning"
                        Title="警告"
                        IsClosable="False"
                        Margin="{StaticResource XSmallTopMargin}"
                        Visibility="{x:Bind ViewModel.AllowCustomSource, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                        Message="本功能仅支持使用RailGoDefalt数据源进行补充。即使你选择了自定义的数据源，数据互补时还是会使用RailGoDefalt作为数据源。请自行思考是否要开启本功能" />
                    <controls:SettingsCard Description="若开启，则使用离线模式时，实时数据等没有离线数据内容会使用在线查询进行补齐。"
                                   Header="离线查询时允许使用在线模式补全数据"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE88A;}"
                                   Margin="{StaticResource XSmallTopMargin}">
                        <ToggleSwitch OffContent="Off" OnContent="On" IsOn="{x:Bind ViewModel.IfCompleteOnOfflineUnsupport, Mode=TwoWay}" />
                    </controls:SettingsCard>
                    <controls:SettingsCard Description="若开启，则使用在线模式查询失败时，将自动使用离线数据进行查询。实时数据等没有离线数据内容仍旧会尝试使用在线查询，直到失败。"
                                   Header="在线查询失败时使用离线模式自动完成查询"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE791;}"
                                   Margin="{StaticResource XSmallTopMargin}">
                        <ToggleSwitch OffContent="Off" OnContent="On" IsOn="{x:Bind ViewModel.IfCompleteOnOnlineFailed, Mode=TwoWay}" />
                    </controls:SettingsCard>
                    <TextBlock Text="自定义数据源" Style="{ThemeResource SubtitleTextBlockStyle}" 
                                   Margin="{StaticResource MediumTopMargin}"/>
                    <controls:SettingsCard Description="若开启，则允许使用任意位置的受支持的数据源作为查询的数据源。可能需要重新打开面板以查看所有的设置项。"
                                   Header="启用自定义数据源"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xF156;}"
                                   Margin="{StaticResource XSmallTopMargin}">
                        <ToggleSwitch OffContent="Off" OnContent="On" IsOn="{x:Bind ViewModel.AllowCustomSource, Mode=TwoWay}" />
                    </controls:SettingsCard>
                    <controls:SettingsCard 
                                   Description="选择一个已经完成的自定义数据源，在“查询源”选择为“自定义数据源”时使用它。"
                                   Header="自定义查询源设定"
                                   HeaderIcon="{ui:FontIcon Glyph=&#xE71D;}"
                                   Margin="{StaticResource XSmallTopMargin}"
                                   IsEnabled="{x:Bind ViewModel.AllowCustomSource, Mode=OneWay}"
                                   Visibility="{x:Bind ViewModel.AllowCustomSource, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ComboBox
                                x:Name="ThirdPartyQueryComboBox"
                                Margin="{StaticResource XSmallTopMargin}"
                                ItemsSource="{x:Bind ViewModel.DataSourceGroups, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.SelectedDataSourceGroup, Mode=TwoWay}"
                                FontSize="15">
                        </ComboBox>
                    </controls:SettingsCard>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>