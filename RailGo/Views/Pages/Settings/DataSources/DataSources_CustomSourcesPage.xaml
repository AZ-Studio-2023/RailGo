<Page
    x:Class="RailGo.Views.Pages.Settings.DataSources.DataSources_CustomSourcesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:models="using:RailGo.Core.Models.Settings"
    xmlns:local="using:RailGo.Views.Pages.Settings.DataSources"
    x:Name="PageRoot"
    mc:Ignorable="d">

    <Grid>
        <SplitView IsPaneOpen="True"
                   DisplayMode="Inline"
                   OpenPaneLength="250"
                   PanePlacement="Left">

            <SplitView.Pane>
                <StackPanel>
                    <!-- 左侧列表操作栏 -->
                    <CommandBar Background="Transparent" DefaultLabelPosition="Right">
                        <CommandBar.Content>
                            <TextBlock Text="数据源组" FontSize="16" FontWeight="SemiBold" Margin="12,0"/>
                        </CommandBar.Content>
                        <AppBarButton Icon="Add" Label="新建" Command="{x:Bind ViewModel.StartCreateNewCommand}"/>
                        <AppBarButton Icon="Refresh" Label="刷新" Command="{x:Bind ViewModel.LoadDataSourcesCommand}"/>
                    </CommandBar>

                    <!-- 数据源组列表 -->
                    <ListView 
                        SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
                        ItemsSource="{x:Bind ViewModel.CustomSources, Mode=OneWay}"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:DataSourceGroup">
                                <Grid Padding="8,4">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <!-- 右侧编辑区域 -->
                    <StackPanel Margin="24" Spacing="20">

                        <!-- 顶部命令栏 -->
                        <CommandBar Background="Transparent" DefaultLabelPosition="Right">
                            <CommandBar.Content>
                                <TextBlock Text="{x:Bind ViewModel.EditorTitle, Mode=OneWay}" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Margin="12,0"/>
                            </CommandBar.Content>

                            <!-- 查看模式下的按钮 -->
                            <AppBarButton Icon="Edit" 
                                         Label="编辑" 
                                         Visibility="{x:Bind ViewModel.EditButtonVisibility, Mode=OneWay}"
                                         Command="{x:Bind ViewModel.StartEditCommand}"/>

                            <!-- 编辑模式下的按钮 -->
                            <AppBarButton Icon="Save" 
                                         Label="保存" 
                                         Visibility="{x:Bind ViewModel.SaveButtonVisibility, Mode=OneWay}"
                                         Command="{x:Bind ViewModel.SaveCommand}"/>
                            <AppBarButton Icon="Cancel" 
                                         Label="取消" 
                                         Visibility="{x:Bind ViewModel.CancelButtonVisibility, Mode=OneWay}"
                                         Command="{x:Bind ViewModel.CancelEditCommand}"/>
                            <AppBarButton Icon="Delete" 
                                         Label="删除" 
                                         Visibility="{x:Bind ViewModel.DeleteButtonVisibility, Mode=OneWay}"
                                         Command="{x:Bind ViewModel.DeleteSelectedCommand}"/>
                        </CommandBar>

                        <!-- 无选择提示 -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8"
                                Padding="40"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind ViewModel.NoSelectionPanelVisibility, Mode=OneWay}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                                <FontIcon Glyph="&#xE964;" FontSize="32" Foreground="Gray"/>
                                <TextBlock Text="请从左侧选择一个数据源组或创建新组" 
                                           FontSize="16"
                                           Foreground="Gray"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- 编辑面板 -->
                        <StackPanel Visibility="{x:Bind ViewModel.EditorPanelVisibility, Mode=OneWay}" Spacing="20">

                            <!-- 组基本信息 -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="基本信息" FontSize="16" FontWeight="SemiBold"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="名称：" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"
                                               Margin="0,0,12,0"/>
                                    <TextBox Grid.Column="1" 
                                             PlaceholderText="输入数据源组名称" 
                                             Text="{x:Bind ViewModel.CurrentItemName, Mode=TwoWay}"
                                             IsEnabled="{x:Bind ViewModel.IsEditing, Mode=OneWay}"/>
                                </Grid>
                            </StackPanel>

                            <!-- 数据源方法 -->
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                    <TextBlock Text="数据源方法" FontSize="16" FontWeight="SemiBold"/>
                                    <!-- 移除添加方法按钮，因为所有方法都是预定义的 -->
                                </StackPanel>
                                <controls:DataGrid
                                    x:Name="MethodsDataGrid"
                                    AutoGenerateColumns="False"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalScrollBarVisibility="Auto"
                                    IsReadOnly="True"
                                    ItemsSource="{x:Bind ViewModel.CurrentMethods, Mode=OneWay}"
                                    SelectionMode="Single"
                                    RowDetailsVisibilityMode="{x:Bind ViewModel.RowDetailsVisibility, Mode=OneWay}">

                                    <!-- 列定义 -->
                                    <controls:DataGrid.Columns>
                                        <controls:DataGridTextColumn 
                                            Binding="{Binding Name, Mode=OneWay}" 
                                            Header="方法名称" 
                                            Width="*"/>
                                        <controls:DataGridTextColumn 
                                            Binding="{Binding ModeDisplayText, Mode=OneWay}" 
                                            Header="模式" 
                                            Width="*"/>
                                        <controls:DataGridTemplateColumn Header="源名称" Width="*">
                                            <controls:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate x:DataType="models:DataSourceMethod">
                                                    <TextBlock Text="{Binding SourceName, Mode=OneWay}"
                                                              VerticalAlignment="Center"/>
                                                </DataTemplate>
                                            </controls:DataGridTemplateColumn.CellTemplate>
                                            <controls:DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate x:DataType="models:DataSourceMethod">
                                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                                        <TextBlock Text="{Binding SourceName, Mode=OneWay}"
                                                                  VerticalAlignment="Center"
                                                                  MinWidth="100"/>
                                                        <Button Content="选择源"
                                                                Click="OnSelectSourceClick"
                                                                Tag="{Binding}"
                                                                Padding="8,4"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </controls:DataGridTemplateColumn.CellEditingTemplate>
                                        </controls:DataGridTemplateColumn>
                                    </controls:DataGrid.Columns>

                                    <!-- RowDetails 编辑面板 -->
                                    <controls:DataGrid.RowDetailsTemplate>
                                        <DataTemplate x:DataType="models:DataSourceMethod">
                                            <StackPanel Margin="20,10" Spacing="15" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="15">
                                                <TextBlock Text="编辑数据源方法" FontSize="16" FontWeight="SemiBold"/>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- 模式编辑 -->
                                                    <TextBlock Text="模式：" 
                                                               Grid.Row="0" Grid.Column="0"
                                                               VerticalAlignment="Center" 
                                                               FontWeight="SemiBold"
                                                               Margin="0,0,12,0"/>
                                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="15">
                                                        <RadioButton Content="在线(Online)" 
                                                                    IsChecked="{x:Bind IsOnlineMode, Mode=TwoWay}"
                                                                    GroupName="ModeGroup"/>
                                                        <RadioButton Content="离线(Offline)" 
                                                                    IsChecked="{x:Bind IsOfflineMode, Mode=TwoWay}"
                                                                    GroupName="ModeGroup"/>
                                                    </StackPanel>

                                                    <!-- 源名称编辑 -->
                                                    <TextBlock Text="源名称：" 
                                                               Grid.Row="1" Grid.Column="0"
                                                               VerticalAlignment="Center" 
                                                               FontWeight="SemiBold"
                                                               Margin="0,10,12,0"/>
                                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                                        <TextBlock Text="{x:Bind SourceName, Mode=OneWay}"
                                                                  VerticalAlignment="Center"
                                                                  MinWidth="100"/>
                                                        <Button Content="选择源"
                                                                    Click="OnSelectSourceClick"
                                                                    Tag="{Binding}"
                                                                Padding="8,4"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </controls:DataGrid.RowDetailsTemplate>
                                </controls:DataGrid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>