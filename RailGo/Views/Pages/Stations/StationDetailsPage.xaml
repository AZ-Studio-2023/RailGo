<Page
    x:Class="RailGo.Views.Pages.Stations.StationDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:SettingsControls="using:CommunityToolkit.WinUI.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧车站信息 -->
        <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="5">
            <!-- 第一行：车站名称 -->
            <TextBlock Text="{x:Bind ViewModel.StationNameLook, Mode=OneWay}" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>

            <!-- 第二行：拼音 -->
            <TextBlock Text="{x:Bind ViewModel.StationPinyin, Mode=OneWay}" 
                       FontSize="24" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- 第三行：管辖信息 -->
             <TextBlock Text="{x:Bind ViewModel.StationBelong, Mode=OneWay}" 
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Spacing="20"  HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="客"
                     Background="#99ccff"
                     BorderBrush="#114598"
                     BorderThickness="1"
                     CornerRadius="10"
                     Padding="10,5"
                     IsHitTestVisible="False"
                     Visibility="{x:Bind ViewModel.IfPassenger, Mode=OneWay}"/>
                <Button Content="货"
                     Background="#ffff99"
                     BorderBrush="#ffff00"
                     BorderThickness="1"
                     CornerRadius="10"
                     Padding="10,5"
                     IsHitTestVisible="False"
                     Visibility="{x:Bind ViewModel.IfCargo, Mode=OneWay}"/>
                <Button Content="高"
                     Background="#ffcccc"
                     BorderBrush="#ee0000"
                     BorderThickness="1"
                     CornerRadius="10"
                     Padding="10,5"
                     IsHitTestVisible="False"
                     Visibility="{x:Bind ViewModel.IfHighspeed, Mode=OneWay}"/>
            </StackPanel>

            <!-- 第五行：代码 -->
            <TextBlock Text="{x:Bind ViewModel.StationCodes, Mode=OneWay}" 
                       FontSize="18" 
                       FontFamily="Consolas"
                       HorizontalAlignment="Center"/>

            <!-- 导航栏 -->
            <StackPanel Orientation="Vertical" Spacing="5" Margin="0,20,0,0" HorizontalAlignment="Center">
                <RadioButton Content="途经车次" 
                            IsChecked="True"
                            GroupName="StationNav"
                            Checked="OnNavButtonChecked"
                            IsEnabled="{x:Bind ViewModel.IfBigscreen, Mode=OneWay}"/>
                <RadioButton Content="车站大屏" 
                            GroupName="StationNav"
                            Checked="OnNavButtonChecked"
                            IsEnabled="{x:Bind ViewModel.IfBigscreen, Mode=OneWay}"/>
                <RadioButton Content="路线" 
                            GroupName="StationNav"
                            Checked="OnNavButtonChecked"
                            IsEnabled="False"/>
            </StackPanel>
        </StackPanel>

        <!-- 分隔线 -->
        <Rectangle Grid.Column="1" Fill="LightGray" Width="1" HorizontalAlignment="Center"/>

        <!-- 右侧内容区域 -->
        <Grid Grid.Column="2" Margin="10,0,0,0">
            <Grid.Resources>
                <DataTemplate x:Key="StationTrainsTemplate">
                    <StackPanel Orientation="Horizontal">
                        <HyperlinkButton Margin="10,10" Content="车次详细信息" Click="DetailBtnClick" x:Name="StationTrains_TrainInformation"/>
                        <HyperlinkButton Margin="10,10" Content="始发站详细信息" Click="DetailBtnClick" x:Name="StationTrains_FromStation"/>
                        <HyperlinkButton Margin="10,10" Content="终到站详细信息" Click="DetailBtnClick" x:Name="StationTrains_ToStation"/>
                    </StackPanel>
                </DataTemplate>
                <DataTemplate x:Key="BigScreenDetails">
                    <StackPanel Orientation="Horizontal">
                        <HyperlinkButton Margin="10,10" Content="车次详细信息" Click="DetailBtnClick" x:Name="BigScreen_TrainInformation"/>
                        <HyperlinkButton Margin="10,10" Content="始发站详细信息" Click="DetailBtnClick" x:Name="BigScreen_FromStation"/>
                        <HyperlinkButton Margin="10,10" Content="终到站详细信息" Click="DetailBtnClick" x:Name="BigScreen_ToStation"/>
                    </StackPanel>
                </DataTemplate>
            </Grid.Resources>
            <!-- 车次信息页面 -->
            <controls:DataGrid x:Name="TrainsDataGrid"
                   AutoGenerateColumns="False"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   VerticalScrollBarVisibility="Auto"
                   IsReadOnly="True"
                   RowDetailsTemplate="{StaticResource StationTrainsTemplate}"
                   RowDetailsVisibilityMode="VisibleWhenSelected"
                   ItemsSource="{x:Bind ViewModel.StationTrains, Mode=OneWay}"
                   SelectedItem="{x:Bind _item_trains, Mode=TwoWay}">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Binding="{Binding DisplayFullNumber}" Header="车次"/>
                    <controls:DataGridTextColumn Binding="{Binding Type}" Header="类型"/>
                    <controls:DataGridTextColumn Binding="{Binding FromStation.Station}" Header="始发站"/>
                    <controls:DataGridTextColumn Binding="{Binding ToStation.Station}" Header="终到站"/>
                    <controls:DataGridTextColumn Binding="{Binding ArriveTime}" Header="到站时间"/>
                    <controls:DataGridTextColumn Binding="{Binding DepartTime}" Header="离站时间" />
                    <controls:DataGridTextColumn Binding="{Binding StopTime}" Header="停站时间"/>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
            <controls:DataGrid x:Name="BigScreenDataGrid"
                   AutoGenerateColumns="False"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   VerticalScrollBarVisibility="Auto"
                   IsReadOnly="True"
                   RowDetailsTemplate="{StaticResource BigScreenDetails}"
                   RowDetailsVisibilityMode="VisibleWhenSelected"
                   ItemsSource="{x:Bind ViewModel.StationBigScreen, Mode=OneWay}"
                   SelectedItem="{x:Bind _item_bigscreen, Mode=TwoWay}">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Binding="{Binding TrainNumber}" Header="车次"/>
                    <controls:DataGridTextColumn Binding="{Binding FromStation}" Header="始发站"/>
                    <controls:DataGridTextColumn Binding="{Binding ToStation}" Header="终到站"/>
                    <controls:DataGridTextColumn Binding="{Binding DisplayTime}" Header="发车时间"/>
                    <controls:DataGridTextColumn Binding="{Binding DisplayWaitingRoom}" Header="候车室"/>
                    <controls:DataGridTextColumn Binding="{Binding DisplayTicketGate}" Header="检票口" />
                    <controls:DataGridTextColumn Binding="{Binding Status}" Header="状态" />
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>

        <!-- 加载指示器 -->
        <muxc:ProgressRing Grid.ColumnSpan="3"
                          IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Width="60" 
                          Height="60"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
    </Grid>
</Page>